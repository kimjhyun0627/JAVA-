package TeamProjectByTerminal;

public class Cabinet {

	private long ID;
	private long password;

	Cabinet(long newID, long newPW) {

		ID = newID;
		password = newPW;
	}

	private boolean isValidPW(long newPW) {

		return (newPW >= 0 && newPW < 10000);
	}

	public long changePW(long newPW) {

		if (isValidPW(newPW)) {

			password = newPW;
			return newPW;
			
		} else {

			errorhandler("invalid Password");
			return -1;
		}
	}

	private void errorhandler(String errorType) {

		System.err.println("Error occured in Cabinet class: " + errorType);
	}
	
	public long getID() {
		
		return ID;
	}
	
	public long getPW() {
		
		return password;
	}
}
