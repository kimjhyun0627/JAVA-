package TeamProjectByTerminal;

public class Cabinet {

	private int ID;
	private int password;

	Cabinet(int newID, int newPW) {

		ID = newID;
		password = newPW;
	}

	private boolean isValidPW(int newPW) {

		return (newPW >= 0 && newPW < 10000);
	}

	public long changePW(int newPW) {

		if (isValidPW(newPW)) {

			password = newPW;
			return newPW;
			
		} else {

			errorhandler("invalid Password");
			return -1;
		}
	}

	private void errorhandler(String errorType) {

		System.err.println("Error occured in Cabinet class: " + errorType);
	}
	
	public int getID() {
		
		return ID;
	}
	
	public int getPW() {
		
		return password;
	}
}
